<!DOCTYPE html>
<html lang="en">
    
<!-- Access the head partial component -->
<%- include ('./partials/head.ejs') %>

<!-- Import the navbar partial -->
<%- include ('./partials/nav.ejs') %>
       

<style>
  .center-container {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  #add-blog-button{
    width: 100%;
    margin-right: auto;
    background-color: #b48261;
    color: white;
    border: #b48261 solid 2px ;
    border-radius: 4px;
    padding: 8px;
    transition: .2s;
    font-weight: 500;
  }

  #add-blog-button:hover{
    transition: .2s;
    
    background-color: #9f7254;
  }
  
  #add-blog-button:active{
    color: white;
    border: #876249 solid 2px ;
    background-color: #6a4a34;
  }

  /* Style for mobile devices */

  @media only screen and (max-width: 766px) {
    .form-container {
      margin-top:80px !important;
      margin-bottom:50px !important;
    }
  }
  
</style>

<body>

    <div class="navbar navbar-dark " style="background-color: #6a4a34;">
      <div class="container-fluid vh-100">
          <div class="text-white container-sm mx-auto text-center">
              <h1>
                <%= blog.title %> 
              </h1>
          </div>
      </div>
    </div>
    
    <!-- Import the footer partial -->
    <%- include ('./partials/footer.ejs') %> 
</body>
