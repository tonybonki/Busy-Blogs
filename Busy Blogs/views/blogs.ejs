<body>
  <%- include ('./partials/nav.ejs') %>
  

  <div class="container">
    <div class="row flex-lg-row-reverse align-items-center vh-100 g-5">
      <div class="col-10 col-sm-8 col-lg-6">
        <img src="../public/blogs-img.png" class="d-blok mx-lg-auto img-fluid" alt="Bootstrap Themes" >
      </div>
      <div class="col-lg-6">
        <h1 class="display-6 fw-bold lh-1 mb-3">Read <span style="color: #b48261;">Amazing blogs</span>  that people have posted!</h1>
        <p class="lead">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Ipsam fugiat a necessitatibus tempora, molestias obcaecati eveniet culpa maxime quia, maiores possimus similique. Enim labore distinctio numquam delectus impedit amet deleniti?</p>
        <a href="/blogs/create"><button style=" font-weight: 500;" class="btn btn-primary">Add your Own</button></a>
      </div>
      
    </div>
  </div>
  
  <!-- List of Blogs -->
    <div id="blogs-container" class="container mt-5 mx-auto ">
        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
            <div id="blogs" class="border rounded shadow-sm m-4 p-3">
              <a style="color: inherit; text-decoration: inherit;" href="blogs<%= blog._id %>">
                <div class="toast-header">
                    <h5 style=" color: #b48261;" class="me-auto"><%= blog.title %></h5>
                  </div>
                  <p class="mb-1" style="font-size: 15px; opacity: 70%;">"<%= blog.snippet %>"</p>
                  <div class="toast-body">
                    <%= blog.body %>
                  </div>
                </a>
            </div>
    
            <%  }) %>
        <% } %>
    </div>
</body>






    
