<section data-bs-spy="scroll" data-bs-target="#quick-acess-nav" tabindex="0">

    <style>

        body, ::after, ::before {
            box-sizing: unset !important;
            overflow-x: hidden;
        }

        .center {
            display: flex;
            align-items: center;
        }

        .breadcrumb-item {
            color: #6c757d;
            text-decoration: none;
        }

        .breadcrumb-item.active{
            color: #b48261;
            text-decoration: none;
        }

        /* .breadcrumb-item {
            
        } */

        .breadcrumb-item:hover {
            transition: .2s;
            color: #b48261;
            text-decoration: underline;
        }

        #mobile-view{
            transform: rotate(3deg);
        }

        #mobile-display-mobile-view{
            display: none;
        }

        

        /* Remove landing page border radius when in a width <= 766px */

        @media only screen and (max-width: 766px) {

        #landing-page-banner{
            border-radius: 0px 0px 0px 0px !important; 
        }
        }

        @media only screen and (max-width: 850px) {
        
        #red-nav{
            top: 60px !important;
        }
        
        #mobile-display{
            display: none;
        }

        #mobile-display-mobile-view{
            display: block;
        }

        #quick-acess-nav{
            display: none;
        }

        #landing-page-banner{
            border-radius: 0px 0px 0px 0px !important; 
