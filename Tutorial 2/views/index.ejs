<!DOCTYPE html>
<html lang="en">
    <!-- Access the head partial component -->
    <%- include ('./partials/head.ejs') %> 

<body>

    <!-- Access the navbar partial component -->
    <%- include ('./partials/nav.ejs') %> 
   
    <div class="blogs content">
        <h2>All Blogs</h2>

        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                
                <h3 class="title"><%= blog.title %></h3>
                <p class="snippet"><%= blog.snippet %> </p>

          <%  }) %>
       <% } %>

    </div>

</body>
</html>