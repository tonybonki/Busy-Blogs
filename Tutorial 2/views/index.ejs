    </section>

    

<body>

    <!-- Access the navbar partial component -->
    <%- include ('./partials/nav.ejs') %> 
   
        

        <div  class="container-sm mx-auto my-4">
            <h2 style=" color: #b48261" class="mx-auto">All Blogs</h2>
        <% if (blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                
              

                    <div class="container-xs px-0 mt-5 shadow-sm ">  
                        <h4 style="color: white ; background-color:#a89385 ;" class="title p-3 rounded-top"><%= blog.title %></h4>
                        <p class="snippet  p-2"><%= blog.snippet %> </p>
                    </div>
                 

          <%  }) %>
       <% } %>
                </div>


    <%- include ('./partials/footer.ejs') %> 

